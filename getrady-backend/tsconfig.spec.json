{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    "outDir": "./dist-test",
    "isolatedModules": true
  },
  "include": ["**/*.spec.ts", "**/*.d.ts"]
}